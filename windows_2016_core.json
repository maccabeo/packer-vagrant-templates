{
  "variables": {
    "autounattend": "./answer_files/2016_core/Autounattend.xml",
    "guest_additions_mode": "disable",
    "headless": "false",
    "disk_size": "61440",
    "disk_type_id": "1",    
    "hyperv_switchname": "{{env `hyperv_switchname`}}",
    "iso_checksum_type": "sha1",
    "iso_checksum": "7adc82e00f1367b43897bb969a75bbf96d46f588",
    "iso_url": "iso/en_windows_server_2016_updated_feb_2018_x64_dvd_11636692.iso"
  },
  "builders": [
    {
      "name": "windows-2016-core-virtualbox",
      "type": "virtualbox-iso",
      "disk_size": "{{user `disk_size`}}",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "1024" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "2" ]
      ],
      "guest_additions_mode": "{{ user `guest_additions_mode` }}",
      "guest_additions_path": "C:\\Program Files\\Oracle\\VirtualBox\\VBoxGuestAdditions.iso",
      "guest_os_type": "Windows2016_64",      
      "headless": "{{ user `headless` }}",
      "iso_urls": [ "{{ user `iso_url` }}",
                    "http://care.dlservice.microsoft.com/dl/download/1/4/9/149D5452-9B29-4274-B6B3-5361DBDA30BC/14393.0.161119-1705.RS1_REFRESH_SERVER_EVAL_X64FRE_EN-US.ISO"
                  ],
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "sha1",
      "boot_wait": "5m",
      "vm_name": "windows_2016_core",
      "communicator": "winrm",
      "winrm_username": "vagrant",
      "winrm_password": "vagrant",
      "winrm_timeout": "12h",
      "winrm_port" : "5985",
      "shutdown_command": "shutdown /s /t 0 /f /d p:4:1 /c \"Packer Shutdown\"",
      "shutdown_timeout": "15m",
      "floppy_files": [
        "{{user `autounattend`}}",
        "./scripts/disable-winrm.ps1",
        "./scripts/enable-winrm.ps1",
        "./scripts/microsoft-updates.bat",
        "./scripts/unattend.xml"
      ]
    },
     {
      "name": "windows-2016-core-hyperv",
      "type": "hyperv-iso",
      "boot_wait": "5m",      
      "cpu": 2,
      "disk_size": "{{user `disk_size`}}",
      "enable_secure_boot": true,
      "enable_virtualization_extensions": true,
      "floppy_files": [
        "{{user `autounattend`}}",
        "./scripts/disable-screensaver.ps1",
        "./scripts/disable-winrm.ps1",
        "./scripts/enable-winrm.ps1",
        "./scripts/microsoft-updates.bat",
        "./scripts/unattend.xml",
        "./scripts/sysprep.bat"
      ],       
      "guest_additions_mode": "disable",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_url": "{{user `iso_url`}}",
      "ram_size": 2048,
      "shutdown_command": "a:/sysprep.bat",
      "switch_name": "{{user `hyperv_switchname`}}",      
      "vm_name": "windows_2016_core",
      "communicator": "winrm",
      "winrm_password": "vagrant",
      "winrm_timeout": "12h",
      "winrm_username": "vagrant"
    }
  ],
  "provisioners": [    
    {
      "type": "windows-shell",
      "scripts": [
        "./scripts/vm-guest-tools.bat",
        "./scripts/enable-rdp.bat",
        "./scripts/compile-dotnet-assemblies.bat",
        "./scripts/compact.bat"
      ]     
    }

  ],
  "post-processors": [
    [{
      "type": "vagrant",
      "keep_input_artifact": true,
      "output": "builds/windows_2016_core_{{.Provider}}.box",
      "vagrantfile_template": "templates/vagrantfile-windows_2016_core.template"
     }
    ]
  ]

}
