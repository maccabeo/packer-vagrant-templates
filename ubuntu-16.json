{
  "variables": {
    "guest_additions_mode": "disable",
    "headless": "false",
    "disk_size": "61440",
    "disk_type_id": "1",
    "memory": "512",
    "cpu": "1",
    "hyperv_switchname": "{{env `HYPERV_VIRTUAL_SWITCH`}}",
    "vm_name": "ubuntu-1604",
    "iso_checksum_type": "sha256",
    "iso_checksum": "29a8b9009509b39d542ecb229787cdf48f05e739a932289de9e9858d7c487c80",
    "iso_url":"iso/ubuntu-16.04.4-server-amd64.iso"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": "{{user `disk_size`}}",
      "guest_os_type": "RedHat_64",
      "headless": "{{ user `headless` }}",
      "http_directory": "http",
      "iso_urls": [
        "{{ user `iso_url` }}",
        "http://releases.ubuntu.com/16.04/ubuntu-16.04.4-server-amd64.iso"
      ],
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "2h",
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",
      "guest_additions_mode": "{{ user `guest_additions_mode` }}",
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "{{user `vm_name`}}",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
         "{{user `memory`}}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "{{user `cpu`}}"
        ]
      ]
    },
    {
      "type": "hyperv-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "enable_secure_boot": true,
      "enable_virtualization_extensions": true,
      "cpu": "{{user `cpu`}}",
      "ram_size": "{{user `memory`}}",
      "disk_size": "{{user `disk_size`}}",
      "headless": "{{ user `headless` }}",
      "http_directory": "http",
      "iso_urls": [
        "{{ user `iso_url` }}",
        "http://releases.ubuntu.com/16.04/ubuntu-16.04.4-server-amd64.iso"
      ],
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "2h",
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",
      "vm_name": "{{user `vm_name`}}"
    },
    {
      "type": "vmware-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": "{{user `disk_size`}}",
      "headless": "{{ user `headless` }}",
      "http_directory": "http",
      "iso_urls": [
        "{{ user `iso_url` }}",
        "http://releases.ubuntu.com/16.04/ubuntu-16.04.4-server-amd64.iso"
      ],
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "2h",
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",
      "tools_upload_flavor": "linux",
      "vm_name": "{{user `vm_name`}}",
      "vmx_data": {
        "memsize": "{{user `memory`}}",
        "numvcpus": "{{user `cpu`}}"
      }
    }
  ],
  "provisioners": [
    {
     "type": "shell",
     "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
     "script": "scripts/ansible.sh"
   },
   {
     "type": "ansible-local",
     "playbook_file": "ansible/main.yml",
     "galaxy_file": "requirements.yml"
   },
   {
     "type": "shell",
     "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
     "script": "scripts/cleanup.sh"
   }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": true,
      "output": "builds/ubuntu16-{{.Provider}}.box",
      "vagrantfile_template": "templates/vagrantfile-ubuntu-16.template"
    }
  ]
}
